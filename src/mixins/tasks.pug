mixin task(data)
  article.task
    h3.title= data.title
    p.description
      = data.description 
    .info
      p.theme= data.theme
      p.theme= data.duration
      p.theme= data.format
      //- p.winner Победитель: 
      //-   = data.winner
      //- p.task Задача: 
      //-   = data.task
    //- img(src=data.imgSrc alt="Иконка кейса" width=data.width height=data.height)
    div
      label(for=data.radioId)
        span.button.taskButton Выбрать кейс

section.tasks#tasks-section
  h2.tasks__header Задачи
  .tasks__content
    each singleTask in tasks_data
      +task(singleTask)
