    "width": "440px",
    "radioId": "task2"
  }] 

mixin task(data)
  article.task
    h3.title= data.title
    p.description
      = data.description
    div.rows
      //- p.winner Победитель: 
      //-   = data.winner
      p.theme Тема: 
        = data.theme
    img(src=data.imgSrc alt="Иконка с подарком" width=data.width height=data.height)
    div
      label(for=data.radioId)
        span.button.taskButton Выбрать кейс

section.tasks#tasks-section
  h2.tasks__header Задачи
  .tasks__content
    each singleTask in tasks_data
      +task(singleTask)
