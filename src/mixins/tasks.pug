-
  var tasks_data = [
  {
    "title": "Кейс от Института ИТ",
    "description": "Создание анимированного видео с озвучкой и использованием 3D, моушн-дизайна и т.п.",
    "duration": "2 минуты",
    "format": "MP4",
    "imgSrc": "assets/tasks/task_1.webp",
    "radioId": "task1"
  },
  {
    "title": "Кейс от VK GROUP",
    "description": "Создание анимированного видео с озвучкой и использованием 3D, моушн-дизайна и т.п.",
    "duration": "2 минуты",
    "format": "MP4",
    "imgSrc": "assets/tasks/task_2.webp",
    "radioId": "task2"
  }] 

mixin task(data)
  article.task
    h3.title= data.title
    p.description
      = data.description
    div.rows
      p.duration Длительность: 
        = data.duration
      p.format Формат: 
        = data.format
    img(src=data.imgSrc alt="Иконка с подарком")
    div
      label(for=data.radioId)
        span.button.taskButton Выбрать кейс

section.tasks#tasks-section
  h2.tasks__header Задачи
  .tasks__content
    each singleTask in tasks_data
      +task(singleTask)
