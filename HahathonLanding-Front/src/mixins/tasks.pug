mixin task(data)
  li.task
    .task_img-box
      img(src=data.imgSrc height="144" width="124.2" alt="Иллюстрация задания")
    article
      h3= data.title
      p
        = data.description
      .task_button-box
        label(for=data.radioId style="display: flex")
          a.button Выбрать

section#tasks-section
  h2.text__header Задачи
  ul#tasks-section_some-terms.text__header
