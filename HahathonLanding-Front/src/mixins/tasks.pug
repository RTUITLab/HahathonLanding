-
  var tasks_data = [
  {
    "title": "Кейс от Института ИТ",
    "description": "В данном кейсе требуется создать игру под мобильный телефон на заданную тематику. Тема игры будет опубликована в 25 марта 2022 года, в 21:00.",
    "imgSrc": "assets/tasks/task_1.svg",
    "radioId": "task1"
  },
  {
    "title": "Кейс от SberGames",
    "description": "Точно крутое задание, но пока неизвестно какое.",
    "imgSrc": "assets/tasks/task_2.svg",
    "radioId": "task2"
  }]

mixin task(data)
  li.task
    .task_img-box
      img(src=data.imgSrc height="144" width="124.2" alt="Иллюстрация задания")
    article
      h3= data.title
      p
        = data.description
      .task_button-box
        label(for=data.radioId style="display: flex")
          a.button(href="#registration-section") Выбрать

section#tasks-section
  h2.text__header Задачи
  ul#tasks-section_some-terms.text__header
    li У вас всего 48 часов
    li 2-4 человека в команде

  ul#tasks
    each singleTask in tasks_data
      +task(singleTask)
